<h2>お酒を編集する</h2>
<%= form_with model: @drink, method: :patch, url: update_drinks_path, local:true do |f| %>
<table class="">
  <tbody>
    <tr>
      <td>商品名</td>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <td>アルコール度数</td>
      <td><%= f.text_field :alcohol %>%</td>
    </tr>
    <tr>
      <td>販売元</td>
      <td><%= f.collection_select :creator_id, Creator.all, :id, :name %></td>
    </tr>
    <tr>
      <td>ジャンル</td>
      <td><%= f.collection_select :genre_id, Genre.all, :id, :name %></td>
    </tr>
    <tr>
      <td>簡易説明</td>
      <td><%= f.text_area :introduction %></td>
    </tr>
  </tbody>
</table>
<%= f.submit :'編集する' %>
<% end %>