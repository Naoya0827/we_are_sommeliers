<h2>販売元を登録する</h2>
<%= form_with model: @creator, url: creators_path, local:true do |f| %>
 <table class="table table-hover">
   <tbody>
     <tr>
       <td>販売元名</td>
       <td>
         <%= f.text_field :name %>
       </td>
     </tr>
     <tr>
       <td>URL</td>
       <td>
         <%= f.text_field :url %>
       </td>
     </tr>
     <tr>
       <td>エリア</td>
       <td>
         <%= f.collection_select :area_id, Area.all, :id, :name, include_blank: 'エリアを選ぶ' %>
       </td>
     </tr>
     <tr>
       <td>簡易説明</td>
       <td>
         <%= f.text_area :introduction %>
       </td>
     </tr>
   </tbody>
 </table>
  <%= f.submit '登録する' %>
 <% end %>