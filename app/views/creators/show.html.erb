<div class="">
    <div class="row d-flex justify-content-between">
        <h2 class="mt-3 ml-3"><%= @creator.name %></h2>
    </div>
    <div class="row">
        <div class="ml-3">
            所在地:<%= @creator.area.name %>
        </div>
        <div class="ml-4">
            URL:<%= link_to @creator.url, @creator.url %>
        </div>
        <div class="ml-500px">
            <%= link_to "この販売元の情報を編集する", edit_creators_path(@creator.id) %>
        </div>
    </div>
    <div class="row">
        <div class="introduction border border-dark">
            <%= @creator.introduction %>
        </div>
    </div>
    <div class="row">
        <h4 class="mt-3 ml-3">ラインナップ</h4>
    </div>
    <div class="d-flex flex-row">
    <% @drinks.each do |drink| %>
    <table class="ml-3 border">
     <tbody>
        <tr>
         <td class="text-center"><%= link_to drink.name, drink_path(drink.id) %></td>
        </tr>
        <tr>
         <td class="text-center"><%= drink.alcohol %>%</td>
        </tr>
        <tr>
         <td class="text-center"><%= drink.genre.name %></td>
        </tr>
     </tbody>
    </table>
    <% end %>
    </div>
</div>





