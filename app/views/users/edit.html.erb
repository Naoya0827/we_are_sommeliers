<h2>プロフィール編集</h2>
<%= form_with model: @user, method: :patch, url: users_path, local:true do |f| %>
<table class="table table-borderless">
  <tbody>
    <tr>
      <td>プロフィール画像</td>
      <td>
        <%= f.attachment_field :image, placeholder: "写真を選択する" %>
      </td>
    </tr>
    <tr>
      <td>ニックネーム</td>
      <td>
        <%= f.text_field :name %>
      </td>
    </tr>
    <tr>
      <td>自己紹介文</td>
      <td>
        <%= f.text_area :introduction %>
      </td>
    </tr>
  </tbody>
</table>
<%= f.submit "変更内容を保存する" %>
<% end %>